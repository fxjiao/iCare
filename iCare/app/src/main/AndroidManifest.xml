<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sundy.icare">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_icare"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activity.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.activity.BaseActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".views.activity.QRScannerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".views.activity.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".views.activity.RegisterActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".views.activity.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
