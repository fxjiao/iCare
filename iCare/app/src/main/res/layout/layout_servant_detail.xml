<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        layout="@layout/layout_topbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_btn_green"
            android:text="@string/get_chat"
            android:textColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnChat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.facebook.drawee.view.DraweeView
                            android:id="@+id/imgMe"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/profile_img" />

                        <TextView
                            android:id="@+id/txtUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgMe"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Sundy Xu"
                            android:textColor="@color/material_grey_850" />

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/material_grey_100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp">

                        <ImageView
                            android:id="@+id/imgMobile"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/phone_call" />

                        <TextView
                            android:id="@+id/txtMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@+id/imgMobile"
                            android:text="15088086697"
                            android:textColor="@color/material_grey_850"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:text="@string/call_phone"
                            android:textColor="@color/material_grey_850" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/service_type" />

                        <TextView
                            android:id="@+id/txtServiceType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:text=">搬运、司机"
                            android:textColor="@color/material_grey_850" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/can_service_time" />

                        <TextView
                            android:id="@+id/txtServiceTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:text="07:00 至 09：00 \n14:00 至 15:00"
                            android:textColor="@color/material_grey_850" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_100" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_grade"
                        android:layout_centerVertical="true"
                        android:textColor="@color/material_blue_grey_800" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar2"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/evaluate"
                        android:textColor="@color/material_blue_grey_800" />

                    <TextView
                        android:id="@+id/txtViewMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_more"
                        android:textColor="@color/material_grey_850"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/img"
                            android:background="@color/abc_search_url_text_normal" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/img"
                            android:layout_marginLeft="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="方Sir"
                                android:id="@+id/txtCommentUser"
                                android:textColor="@color/material_blue_grey_900" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sundy Xu 的服务太到家了，下次都是找他好了"
                                android:id="@+id/txtComment"
                                android:layout_marginTop="3dp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageView2"
                            android:background="@color/abc_search_url_text_normal" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/imageView2"
                            android:layout_marginLeft="6dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="方Sir"
                                android:id="@+id/textView4"
                                android:textColor="@color/material_blue_grey_900" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sundy Xu 的服务太到家了，下次都是找他好了"
                                android:id="@+id/textView5"
                                android:layout_marginTop="3dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/edtComment"
                        android:background="@drawable/corner_edt"
                        android:layout_marginTop="6dp"
                        android:padding="5dp"
                        android:hint="你可以写一写这位服务者的服务情况..."
                        android:gravity="left|top"
                        android:textSize="13sp" />

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="@string/submit"
                        android:id="@+id/button"
                        android:textColor="@color/white"
                        android:background="@drawable/corner_btn_gray"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>


</LinearLayout>